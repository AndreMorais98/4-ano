      .w3-col.s3
        label Insert the serial number of the certificate
      .w3-col.s9.w3-border
        input.w3-input.w3-border.w3-light-grey(type='text' name='sn')
    br
    input.w3-btn.w3-teal.w3-border(type='submit' value='Submit')
